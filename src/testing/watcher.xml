  <!-- ********* -->
  <!-- * Arena * -->
  <!-- ********* -->
  <arena size="5, 5, 1" center="0,0,0.5">
    <floor id="floor"
           source="image"
           path="src/testing/grayscale.jpg"/>
    <box id="wall_e" size="2, 0.2, 0.2" movable="false">
      <body position="2, 0, 0" orientation="90, 0, 0"/>
    </box>
    <e-puck id="epuck10">
      <body position="1.77, 0, 0"
            orientation="0, 0, 0"/>
      <controller config="watcher" />
    </e-puck>
    <e-puck id="epuck11">
      <body position="1.77, 0.3, 0"
            orientation="0, 0, 0"/>
      <controller config="watcher" />
    </e-puck>
    <light id="light0"
           position="1,0,0.25"
           orientation="0,0,0"
           color="yellow"
           intensity="1.0"
           medium="leds"/>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" grid_size="1,1,1"/>
    <range_and_bearing id="rab"/>
    <range_and_bearing id="ircom"/>
  </media>

  *****************
  * Visualization *
  *****************
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0"
                   position="1.5,0,1"
                   look_at="1.5,0,0"
                   lens_focal_length="10" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
