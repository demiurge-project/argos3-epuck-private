    <watcher_controller id="1_led"
                        library="build_linux/testing/libwatcher.so">
      <actuators>
        <epuck_ground_leds implementation="default" medium="leds"/>
      </actuators>
      <sensors>
      </sensors>
      <params no_of_leds='1'/>
